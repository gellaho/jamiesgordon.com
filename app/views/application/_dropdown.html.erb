<%- uuid = SecureRandom.uuid %>
<div id="d<%= uuid %>"></div>
<menu x-data="{ expanded: false }" >
  <%= button_tag(class: "text-white flex flex-row", "x-on:click" => "expanded = true", "x-on:click.outside" => "expanded = false", type: "button") do %>
    <%= button_text %>
    <%= icon(:chevron_down) %>
  <% end %>
  <template x-teleport="#d<%= uuid %>">
    <template x-if="expanded">
      <div class="relative w-0 h-0">
        <div class="flex flex-col absolute md:top-2 top-8 gap-4 p-4 z-50 bg-slate-700 shadow-md shadow-black w-max">
          <%= yield %>
        </div>
      </div>
    </template>
  </template>
</menu>
